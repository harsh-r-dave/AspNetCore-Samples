@model AspNetCore_Samples.Models.ComponentViewModels.SiteMessageViewModel

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <script id="script-error">
        toastr.error('@Model.ErrorMessage', '', Samples.Toastr.config);
    </script>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <script id="script-success">
        toastr.success('@Model.SuccessMessage', '', Samples.Toastr.config);
    </script>
}
@if (!string.IsNullOrEmpty(Model.WarningMessage))
{
    <script id="script-warning">
        toastr.warning('@Model.WarningMessage', '', Samples.Toastr.config);
    </script>
}
@if (!string.IsNullOrEmpty(Model.InformationMessage))
{
    <script id="script-information">
        toastr.info('@Model.InformationMessage', '', Samples.Toastr.config);
    </script>
}